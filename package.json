{
    // Project metadata
    "name": "FraudPrevention",
    "version": "1.0.0",
    "description": "A TypeScript implementation for fraud prevention",
    "main": "dist/index.js",
    "author": "M. P. (mpermar082)",
    "license": "MIT",
    
    // Script commands
    "scripts": {
        // Build command: Compile TypeScript code
        "build": "tsc",
        // Start command: Run compiled JavaScript code
        "start": "node dist/index.js",
        // Dev command: Run TypeScript code with ts-node
        "dev": "ts-node src/index.ts",
        // Test command: Run Jest tests
        "test": "jest",
        // Clean command: Remove compiled JavaScript code
        "clean": "rm -rf dist"
    },
    
    // Project dependencies
    "dependencies": {
        // Command-line argument parsing library
        "minimist": "^1.2.0"
    },
    
    // Project development dependencies
    "devDependencies": {
        // TypeScript compiler
        "typescript": "^5.0.0",
        // TypeScript type definitions for Node.js
        "@types/node": "^18.0.0",
        // TypeScript type definitions for minimist
        "@types/minimist": "^1.2.0",
        // TypeScript execution environment
        "ts-node": "^10.0.0",
        // Testing framework
        "jest": "^29.0.0",
        // TypeScript type definitions for Jest
        "@types/jest": "^29.0.0"
    }
}